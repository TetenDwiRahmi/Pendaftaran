<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:padding="5dp">

    <ImageView
        android:id="@+id/show_foto"
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:background="@drawable/abu" />

    <TextView
        android:id="@+id/show_nama"
        android:layout_toRightOf="@id/show_foto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Nama"
        android:textColor="@color/colorBlack"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/show_hp"
        android:layout_toRightOf="@id/show_foto"
        android:layout_below="@id/show_nama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:fontFamily="@font/poppins_light"
        android:text="No HP"
        android:textColor="@color/colorBlack"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/show_jk"
        android:layout_toRightOf="@id/show_foto"
        android:layout_below="@id/show_hp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:fontFamily="@font/poppins_light"
        android:text="Jenis Kelamin"
        android:textColor="@color/colorBlack"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/show_alamat"
        android:layout_toRightOf="@id/show_foto"
        android:layout_below="@id/show_jk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:fontFamily="@font/poppins_light"
        android:text="Alamat"
        android:textColor="@color/colorBlack"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/show_lokasi"
        android:layout_below="@id/show_foto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/poppins_light"
        android:text="Lokasi Pendaftaran"
        android:textColor="@color/colorBlack"
        android:textSize="12dp" />

    <LinearLayout
        android:layout_below="@id/show_lokasi"
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@color/colorBlack"
        android:orientation="vertical" />
</RelativeLayout>